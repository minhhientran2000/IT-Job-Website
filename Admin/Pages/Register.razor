
@page "/register"
@using Api.Models
<div class="content-wrapper d-flex align-items-center auth px-0">
    <div class="row w-100 mx-0">
        <div class="col-lg-4 mx-auto">
            <div class="auth-form-light text-left py-5 px-4 px-sm-5">
                @*<div class="brand-logo">
                    <img src="../assets/images/logo-dark.svg" alt="logo">
                </div>*@
                <h4>New here?</h4>
                <h6 class="font-weight-light">Signing up is easy. It only takes a few steps</h6>
                <EditForm Model="@registrationModel" OnValidSubmit="Submit">
                <DataAnnotationsValidator />
                    <div class="form-group">
                        <input type="email" @bind-value="registrationModel.Email" class="form-control form-control-lg" placeholder="Email">
                        <ValidationMessage For="@(() => registrationModel.Email)" />
                    </div>                   
                    <div class="form-group">
                        <input type="password" @bind-value="registrationModel.Password" class="form-control form-control-lg" placeholder="Password">
                        <ValidationMessage For="@(() => registrationModel.Password)" />
                    </div>
                    <div class="form-group">
                        <input type="text" @bind-value="registrationModel.CreatedDate" class="form-control form-control-lg" placeholder="Created Date">
                        <ValidationMessage For="@(() => registrationModel.CreatedDate)" />
                    </div>
                    <div class="form-group">
                        <label>Role</label>
                        
                            <div class="d-flex justify-content-around">
                                <div class="form-check">
                                <input @onchange="@(() => registrationModel.UserTypeId=2)" type="radio" name="checkrole" class="form-check-input">
                                        <label>Seeker</label>                     
                                </div>
                                <div class="form-check">
                                <input @onchange="@(() => registrationModel.UserTypeId=3)" type="radio" name="checkrole" class="form-check-input">
                                    <label>Company</label>
                                </div>
                            </div>
                        <ValidationMessage For="@(() => registrationModel.UserTypeId)" />
                    </div>
                   @* <div class="mb-4">
                        <div class="form-check">
                            <label class="form-check-label text-muted">
                                <input type="checkbox" class="form-check-input">
                                I agree to all Terms & Conditions
                            </label>
                        </div>
                    </div>*@
                    <div class="mt-3">
                        <button class="btn btn-block btn-primary btn-lg font-weight-medium auth-form-btn" type="submit">SIGN UP</button>
              @*          <a class="btn btn-block btn-primary btn-lg font-weight-medium auth-form-btn" href="#">SIGN UP</a>*@
                    </div>
                    <div class="text-center mt-4 font-weight-light">
                        Already have an account? <a href="/" class="text-primary">Login</a>
                    </div>
                </EditForm>
            </div>
        </div>
    </div>
</div>

